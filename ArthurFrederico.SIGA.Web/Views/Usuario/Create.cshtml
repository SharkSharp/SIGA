@model ArthurFrederico.SIGA.Model.UsuarioModel

@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html>
    <head>
        <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
        <title>Login</title>
    </head>
    <body>

        <div class="login-box">
            <div class="login-box-title">
                <span>Cadastro</span>
            </div>
            <div class="login-box-desc">
                <span>Usuário</span>
            </div>
            <div class="line"></div>

            <div class="form">
                @Html.ValidationMessage("ModelError")

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "" })
                        <div class="form-input-cadastro">
                            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "input-cadastro", placeholder = "" } })
                            <div class="error-message">
                                @Html.ValidationMessageFor(model => model.Nome, "")
                            </div>
                        </div>
                        <div class="form-input-cadastro">
                            @Html.LabelFor(model => model.Cpf, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { @class = "input-cadastro" } })
                            <div class="error-message">
                                @Html.ValidationMessageFor(model => model.Cpf, "")
                            </div>
                        </div>

                        <div class="form-input-cadastro">
                            @Html.LabelFor(model => model.Sexo, htmlAttributes: new { @class = "" })
                            <div class="checkbox">
                                @Html.Label("Masculino:")
                                @Html.RadioButtonFor(model => model.Sexo, true)
                                @Html.Label("Feminino:")
                                @Html.RadioButtonFor(model => model.Sexo, false)
                                <div class="error-message">
                                    @Html.ValidationMessageFor(model => model.Sexo, "")
                                </div>
                            </div>
                        </div>

                        <div class="form-input-cadastro">
                            @Html.LabelFor(model => model.CidadeId, htmlAttributes: new { @class = "" })
                            @Html.DropDownListFor(model => model.CidadeId, new SelectList(ViewBag.Cidades, "Id", "Nome"), new { @class = "input-cadastro-select" })
                            <div class="error-message">
                                @Html.ValidationMessageFor(model => model.Cidade, "")
                            </div>
                        </div>

                        <div class="form-input-cadastro">
                            @Html.LabelFor(model => model.Telefone, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "input-cadastro" } })
                            <div class="error-message">
                                @Html.ValidationMessageFor(model => model.Telefone, "")
                            </div>
                        </div>

                        <div class="form-input-cadastro">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input-cadastro" } })
                            <div class="error-message">
                                @Html.ValidationMessageFor(model => model.Email, "")
                            </div>
                        </div>

                        <div class="form-input-cadastro">
                            @Html.LabelFor(model => model.HashSenha, htmlAttributes: new { @class = "" })
                            @Html.PasswordFor(model => model.HashSenha, new { @class = "input-cadastro" })
                            <div class="error-message">
                                @Html.ValidationMessageFor(model => model.HashSenha, "")
                            </div>
                        </div>

                        <div class="login-footer">
                            <button type="submit" id="login-button">Criar</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </body>
</html>